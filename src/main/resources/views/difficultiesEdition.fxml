          <TableColumn fx:id="difficultyCodeColumn" maxWidth="450.0" onEditCommit="#difficultyCodeColumnOnEditCommit" prefWidth="450.0" resizable="false" text="Difficulty code" />
          <TableColumn fx:id="difficultyDescriptionColumn" maxWidth="450.0" onEditCommit="#difficultyDescriptionColumnOnEditCommit" prefWidth="450.0" resizable="false" text="Difficulty description" />
